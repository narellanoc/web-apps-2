<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  
  <p>
    <%= form.label "Author" %>
    <%= form.text_field "author" %>
    <%= form.label "Body" %>
    <%= form.text_field "body" %>
    <%= form.label "Image" %>
    <%= form.text_field "image" %>
  </p>
  <%= form.submit %>
<% end %>